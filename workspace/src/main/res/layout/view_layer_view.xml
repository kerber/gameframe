<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/list_selectable_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/view_layer_title"
        android:layout_margin="16dp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="RtlHardcoded" />

    <android.support.v7.widget.CardView
        android:id="@+id/view_layer_thumbnail_container"
        android:layout_below="@id/view_layer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="12dp"
        tools:ignore="RtlHardcoded">

        <com.savvasdalkitsis.gameframe.feature.workspace.element.grid.view.LedGridView
            android:id="@+id/view_layer_thumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp" />

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/view_layer_visibility_visible"
        style="?attr/actionButtonStyle"
        android:src="@drawable/ic_visibility_black_48px"
        android:layout_alignTop="@id/view_layer_thumbnail_container"
        android:layout_toRightOf="@id/view_layer_thumbnail_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <ImageView
        android:id="@+id/view_layer_visibility_invisible"
        style="?attr/actionButtonStyle"
        android:src="@drawable/ic_visibility_off_black_48px"
        android:layout_alignTop="@id/view_layer_thumbnail_container"
        android:layout_toRightOf="@id/view_layer_thumbnail_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <ImageView
        android:id="@+id/view_layer_delete"
        style="?attr/actionButtonStyle"
        android:src="@drawable/ic_delete_black_48px"
        android:layout_alignBottom="@id/view_layer_thumbnail_container"
        android:layout_toRightOf="@id/view_layer_thumbnail_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <ImageView
        android:id="@+id/view_layer_duplicate"
        style="?attr/actionButtonStyle"
        android:src="@drawable/ic_content_copy_black_48px"
        android:layout_alignTop="@id/view_layer_delete"
        android:layout_toRightOf="@id/view_layer_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <ImageView
        android:id="@+id/view_layer_settings"
        style="?attr/actionButtonStyle"
        android:src="@drawable/ic_more_vert_black_48px"
        android:layout_alignLeft="@id/view_layer_duplicate"
        android:layout_above="@id/view_layer_duplicate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription,RtlHardcoded" />

</RelativeLayout>