<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gameFrameColorPrimary</item>
        <item name="colorPrimaryDark">@color/gameFrameColorPrimaryDark</item>
        <item name="colorAccent">@color/gameFrameColorAccent</item>
        <item name="android:buttonStyle">@style/AppTheme.ButtonStyle</item>
        <item name="colorButtonNormal">@color/gameFrameColorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/gameFrameColorPrimary</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:buttonStyle">@style/AppTheme.Dialog.ButtonStyle</item>
    </style>

    <style name="AppTheme.ButtonStyle" parent="Widget.AppCompat.Button">>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Dialog.ButtonStyle" parent="Widget.AppCompat.Button">>
        <item name="android:textColor">@color/gameFrameColorPrimary</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AlertDialog.Changelog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/gameFrameColorAccent</item>
        <item name="android:textColorPrimary">@color/gameFrameColorPrimary</item>
        <item name="android:windowTitleStyle">@style/AlertDialogChangelogStyleTitle</item>
    </style>

    <style name="AlertDialogChangelogStyleTitle" parent="Base.DialogWindowTitle.AppCompat">
        <item name="android:textColor">@color/gameFrameColorPrimaryDark</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

</resources>
